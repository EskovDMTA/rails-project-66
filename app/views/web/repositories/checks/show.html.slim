= link_to "Перейти к репозиторию", repository_path(params[:repository_id]), class: "btn btn-primary mb-4"
table.table
  tbody
    tr
      td
        | Дата создания
      td
        = @check.created_at.strftime("%d %B %Y, %H:%M")
    tr
      td
        | Статус
      td
        =
    tr
      td
        | Проверка пройдена
      td
        = @check.aasm_state
    tr
      td
        | Количество замечаний
      td
        = @errors_count
    tr
      td
        | ID коммита
      td
        = link_to @check.commit_id, commit_link(@repository.full_name, @check.commit_id), target: "_blank"
.mb-5
table.table.table-hover.mb-5
  thead
    tr
      th
        | Сообщение
      th
        | Идентификатор правила
      th
        | Строка и символ

  - if @repository.language.downcase == 'javascript'
    = render partial: "web/repositories/checks/partial/js_table", locals: {check: @check, repository: @repository, lint_errors: @lint_errors}
  - else
    = render partial: "web/repositories/checks/partial/ruby_table", locals: {check: @check, repository: @repository, lint_errors: @lint_errors}
